{
  "name": "santai-api",
  "description": "This is the API for the Santai project (Wavescan). It is built with Elysia and TypeScript.",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist",
    "start": "bun run ./dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "elysia": "latest"
  },
  "devDependencies": {
    "bun-types": "latest",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*"
  },
  "module": "src/index.js"
}